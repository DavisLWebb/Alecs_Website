<h1>Posts</h1>

<table>
  <thead>
    <tr>
        <th>Content</th> 
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.content %></td>
        <td><%= link_to 'Details', post_path(post) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @posts %>

<script>
  $(document).ready(app.posts.index);
</script>
